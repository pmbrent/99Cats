<h1><%= @cat.name %></h1>
<h3>Heading</h3>

<table>
  <thead>
    <tr>
      <th>Vital Attributes</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Birth Date: </td>
      <td><%= @cat.birth_date %></td>
    </tr>
    <tr>
      <td>Age:</td>
      <td><%= @cat.age %></td>
    </tr>
    <tr>
      <td>Sex:</td>
      <td><%= @cat.sex %></td>
    </tr>
    <tr>
      <td>Color:</td>
      <td><%= @cat.color %>
      </td>
    </tr>
    <tr>
      <td>Description:</td>
      <td><%= @cat.description %></td>
    </tr>
</table>

<table>
  <thead>
    <tr>Existing appointments</tr>
  </thead>
  <tbody>
    <tr>
      <td>Start Date</td>
      <td>End Date</td>

    </tr>

  <% @cat.cat_rental_requests.order(:start_date).each do |rental| %>

    <tr>
      <td><%= rental.start_date %></td>
      <td><%= rental.end_date %></td>
      <%if rental.status == "PENDING"%>
      <td><%= button_to "Approve", approve_rental_url, method: :post %></td>
      <td><%= button_to "Deny", deny_rental_url, method: :post %></td>
      <%end%>
    </tr>

  <% end %>


  </tbody>
</table>
